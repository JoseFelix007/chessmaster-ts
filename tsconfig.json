{
  "compilerOptions": {
    "target": "es6", // Especifica la versión de JavaScript de destino
    "module": "esnext", // Especifica el sistema de módulos
    "lib": ["es6", "dom", "es2017"], // Especifica las bibliotecas a incluir
    "allowJs": true, // Permite compilar archivos JavaScript
    "outDir": "./dist", // Especifica la carpeta de salida para los archivos JavaScript
    "rootDir": "./src", // Especifica la carpeta raíz de los archivos TypeScript
    "strict": true, // Habilita las opciones de tipo estrictas
    "esModuleInterop": true // Mejora la interoperabilidad con módulos CommonJS
  }
}